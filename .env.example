# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/vpass_dev
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/vpass_test

# Server
BASE_URL=http://localhost:3000
PORT=3000

# YouTube OAuth (get from https://console.cloud.google.com/)
YOUTUBE_CLIENT_ID=your_youtube_client_id.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret

# YouTube Data API v3 Key (optional, for auto-filling channel info)
# Get from https://console.cloud.google.com/ -> APIs & Services -> Credentials
YOUTUBE_API_KEY=your_youtube_api_key_here

# Session Security (generate with: openssl rand -hex 32)
SESSION_SECRET=generate_random_string_here_at_least_64_chars_long_abcdef1234567890

# Taiwan Digital Wallet API (Issuer)
ISSUER_API_URL=https://issuer-sandbox.wallet.gov.tw
ISSUER_ACCESS_TOKEN=your_issuer_access_token_here
